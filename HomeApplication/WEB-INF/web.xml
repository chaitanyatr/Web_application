<web-app>
	<servlet>
	<servlet-name>registerapp</servlet-name>
	<servlet-class>RegisterServlet</servlet-class>
	</servlet>

	<servlet-mapping>
	<servlet-name>registerapp</servlet-name>
	<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
	<servlet-name>loginapp</servlet-name>
	<servlet-class>LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
	<servlet-name>loginapp</servlet-name>
	<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
	<servlet-name>depositapp</servlet-name>
	<servlet-class>DepositServlet</servlet-class>
	</servlet>

	<servlet-mapping>
	<servlet-name>depositapp</servlet-name>
	<url-pattern>/deposit</url-pattern>
	</servlet-mapping>
</web-app>